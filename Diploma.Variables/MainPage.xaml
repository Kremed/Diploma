<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Diploma.Variables.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <StackLayout Margin="20,50" Spacing="20">

        <StackLayout IsVisible="False">
            <Entry
                x:Name="TxtFirstName"
                FontSize="20"
                Placeholder="الرجاء ادخال اسم الاول"
                TextColor="Red" />

            <Entry
                x:Name="TxtLastName"
                FontSize="20"
                Placeholder="الرجاء ادخال اللقب"
                TextColor="Red" />

            <Label
                x:Name="LblFullName"
                Background="Red"
                FontSize="40"
                HorizontalTextAlignment="Center"
                Text=""
                TextColor="White" />

            <Button Clicked="SetTheFullName" Text="اظهار الاسم كاملا" />
        </StackLayout>


        <Button Clicked="Button_Clicked" Text="اظهار رسالة" />

        <Button
            x:Name="BtnGoToCardPage"
            Clicked="BtnGoToCardPage_ClickedAsync"
            Text="أدارة كروت الأتصالات - Array + For Loop" />



    </StackLayout>
</ContentPage>
