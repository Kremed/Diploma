<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Diploma.Variables.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <StackLayout Margin="20,50" Spacing="20">

        <Entry
            x:Name="TxtFirstName"
            FontSize="20"
            Placeholder="الرجاء ادخال اسم الاول"
            TextColor="Red" />

        <Entry x:Name="TxtLastName" Placeholder="الرجاء ادخال اللقب" />

        <Label
            x:Name="LblFullName"
            Background="Red"
            FontSize="40"
            HorizontalTextAlignment="Center"
            Text=""
            TextColor="White" />


        <Button Clicked="SetTheFullName" Text="اظهار الاسم كاملا" />

        <Button Clicked="Button_Clicked" Text="اظهار رسالة" />

        <Button Clicked="Button_Clicked_1" Text="الالة الحاسبة" />

    </StackLayout>
</ContentPage>
