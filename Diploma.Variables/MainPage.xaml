<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Diploma.Variables.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout Margin="20,50">

        <Entry x:Name="TxtFirstName" Placeholder="الرجاء ادخال اسم الاول" />

        <Entry x:Name="TxtLastName" Placeholder="الرجاء ادخال اللقب" />

        <Label
            x:Name="LblFullName"
            FontSize="40"
            TextColor="White"
            Background="Red"
            HorizontalTextAlignment="Center" />

        <Button Clicked="SetTheFullName" Text="اظهار الاسم كاملا" />

    </StackLayout>
</ContentPage>
